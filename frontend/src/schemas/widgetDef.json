{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Widget Schema",

  "type": "object",
  "required": ["type", "id", "default-value"],
  "additionalProperties": true,

  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "radio-group",
        "slider",
        "datetime-picker",
        "number-input",
        "location-input",
        "text",
        "checkbox",
        "dropdown"
      ]
    },

    "id": {
      "type": "string",
      "minLength": 1
    },

    "title": {
      "type": "string"
    },

    "description": {
      "type": "string"
    },

    "default-value": {}
  }
}
