{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Transformation Schema",
  "type": "object",
  "additionalProperties": false,

  "required": ["id", "physical_layer", "operation", "zoom", "layer"],

  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },

    "physical_layer": {
      "type": "object",
      "required": ["ref"],
      "additionalProperties": false,
      "properties": {
        "ref": { "type": "string", "minLength": 1 }
      }
    },

    "operation": {
      "type": "string",
      "minLength": 1
    },

    "zoom": {
      "type": "number",
      "minimum": 3,
      "maximum": 28
    },

    "layer": {
      "type": "object",
      "required": ["tag"],
      "additionalProperties": false,
      "properties": {
        "tag": { "type": "string", "minLength": 1 },
        "feature": { "type": "string", "minLength": 1 }
      }
    }
  }
}
