{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Widget Schema",

  "type": "object",
  "required": ["key", "metric", "encoding"],
  "additionalProperties": true,

  "properties": {
    "key": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1
    },
    "metric": {
      "type": "string",
      "minLength": 1
    },

    "encoding": {
      "type": "string",
      "enum": ["bar", "pie", "table"]
    }
  }
}
